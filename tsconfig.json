{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "test"
  ]
}
